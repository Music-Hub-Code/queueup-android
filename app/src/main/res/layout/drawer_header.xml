<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/background_primary_light"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        >

        <ImageView
            android:id="@+id/drawer_user_image"
            android:layout_gravity="start"
            android:background="@drawable/queueup_icon"
            android:layout_marginLeft="8dp"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/drawer_user_name"
            android:textSize="18sp"
            android:textColor="@color/primary_dark"
            android:padding="18dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/drawer_logout_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/logout"
        android:textColor="@color/accent_light"
        style="?android:attr/borderlessButtonStyle"

        />

</LinearLayout>
