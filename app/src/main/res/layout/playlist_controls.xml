<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="-12dp"
    android:id="@+id/playlist_controls"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/track_progress_text"
            android:layout_gravity="end"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_light"
            android:textSize="12sp"
            android:text="@string/no_progress"/>


        <com.gc.materialdesign.views.ProgressBarDeterminate
            android:id="@+id/track_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/accent_dark"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="0dp"
            android:clipToPadding="false"
            android:gravity="center_horizontal"
            >


            <ImageButton
                android:layout_gravity="center_horizontal"
                android:id="@+id/play_button"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_play_arrow_white"
                android:background="@drawable/background_transparent"
                />


            <ImageButton
                android:layout_gravity="center_horizontal"
                android:id="@+id/skip_button"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_skip_next_white"
                android:layout_marginLeft="12dp"
                android:background="@drawable/background_transparent"
                />

            <ImageButton
                android:layout_gravity="center_horizontal"
                android:id="@+id/stop_playback_button"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_clear_white"
                android:layout_marginLeft="12dp"
                android:background="@drawable/background_transparent"
                />

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
