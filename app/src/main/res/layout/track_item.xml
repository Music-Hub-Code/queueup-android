<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:gravity="center_horizontal"
    android:elevation="4dp"
    android:orientation="horizontal"
    android:translationX="-2dp"
    android:background="@drawable/grid_item_rect"
    android:id="@+id/track_list_item"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:clipToPadding="false">

    <ImageView
        android:id="@+id/track_list_item_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="fitStart"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/track_list_item_image"
        android:background="#ff222222"
        android:orientation="vertical"
        android:paddingTop="4dp"
        android:paddingBottom="8dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        >


        <TextView
            android:paddingTop="4dp"
            android:textColor="@color/primary_material_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:id="@+id/track_list_item_name"
            android:gravity="left"
            />
        <TextView
            android:paddingTop="4dp"
            android:textColor="@color/primary_dark_material_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:id="@+id/track_list_item_artist"
            android:gravity="left"
            />
    </LinearLayout>
</LinearLayout>
