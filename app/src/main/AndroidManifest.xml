<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.louiswilliams.queueupplayer" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.spotify.sdk.android.authentication.LoginActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
        </activity>
        <activity
            android:name=".QueueActivity"
            android:label="@string/title_activity_queue"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.louiswilliams.queueupplayer.MainActivity" />
        </activity>
        <activity
            android:name=".PlayerActivity"
            android:label="@string/title_activity_player"
            android:launchMode="singleTask"
            android:parentActivityName=".PlaylistChooserActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.louiswilliams.queueupplayer.PlaylistChooserActivity" />
        </activity>
        <activity
            android:name=".PlaylistChooserActivity"
            android:label="@string/title_activity_playlist_chooser"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.louiswilliams.queueupplayer.MainActivity" />
        </activity>
    </application>

</manifest>
